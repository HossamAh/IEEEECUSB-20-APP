<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayTaskActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="417dp"
        android:layout_height="251dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/committee" />

    <TextView
        android:id="@+id/topic"
        android:layout_width="126dp"
        android:layout_height="39dp"
        android:text="topic"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/deatails"
        app:layout_constraintStart_toStartOf="@+id/deatails"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/target"
        android:layout_width="126dp"
        android:layout_height="39dp"
        android:text="location"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/deadline"
        app:layout_constraintStart_toStartOf="@+id/deadline"
        app:layout_constraintTop_toBottomOf="@+id/deatails" />

    <TextView
        android:id="@+id/deadline"
        android:layout_width="126dp"
        android:layout_height="39dp"
        android:layout_marginStart="44dp"
        android:text="date"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/target" />

    <TextView
        android:id="@+id/deatails"
        android:layout_width="126dp"
        android:layout_height="39dp"
        android:text="deatails"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/target"
        app:layout_constraintStart_toStartOf="@+id/target"
        app:layout_constraintTop_toBottomOf="@+id/topic" />
</android.support.constraint.ConstraintLayout>