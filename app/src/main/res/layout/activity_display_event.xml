<?xml version="1.0"?>

    <android.support.constraint.ConstraintLayout tools:context=".DisplayTaskActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content"
        android:layout_width="188dp"
        app:layout_constraintTop_toTopOf="@+id/topic"
        app:layout_constraintStart_toEndOf="@+id/topic"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="19sp"
        android:textAlignment="textStart"
        android:fontFamily="@font/ruluko"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:id="@+id/TOPIC"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="109dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/deatails"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="19sp"
        android:textAlignment="textStart"
        android:fontFamily="@font/ruluko"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:id="@+id/DETAILS"
        app:layout_constraintHorizontal_bias="0.466"
        android:layout_marginTop="88dp"/>

    <ImageView android:layout_height="111dp" android:layout_width="162dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="32dp" android:id="@+id/ImageURL" android:layout_marginTop="88dp" app:srcCompat="@drawable/ieeeblue" app:layout_constraintStart_toStartOf="parent" android:scaleType="centerCrop"/>

    <TextView android:layout_height="39dp" android:layout_width="126dp" app:layout_constraintTop_toTopOf="parent" android:textSize="19sp" android:textAlignment="textStart" android:fontFamily="@font/ruluko" android:layout_marginStart="32dp" android:id="@+id/topic" android:layout_marginTop="24dp" app:layout_constraintStart_toStartOf="parent" android:text="topic :"/>

    <TextView android:layout_height="39dp" android:layout_width="126dp" android:textSize="19sp" android:textAlignment="textStart" android:fontFamily="@font/ruluko" android:layout_marginStart="32dp" android:id="@+id/target" android:layout_marginTop="112dp" app:layout_constraintStart_toStartOf="parent" android:text="location :" app:layout_constraintTop_toBottomOf="@+id/ImageURL"/>

    <TextView android:layout_height="wrap_content" android:layout_width="219dp" app:layout_constraintTop_toTopOf="@+id/target" app:layout_constraintStart_toEndOf="@+id/target" app:layout_constraintEnd_toEndOf="parent" android:textSize="19sp" android:textAlignment="textStart" android:fontFamily="@font/ruluko" android:layout_marginEnd="8dp" android:layout_marginStart="8dp" android:id="@+id/LOCATION" app:layout_constraintHorizontal_bias="0.0"/>

    <TextView android:layout_height="wrap_content" android:layout_width="219dp" app:layout_constraintTop_toTopOf="@+id/deadline" app:layout_constraintStart_toEndOf="@+id/deadline" app:layout_constraintEnd_toEndOf="parent" android:textSize="19sp" android:textAlignment="textStart" android:fontFamily="@font/ruluko" android:layout_marginEnd="8dp" android:layout_marginStart="8dp" android:id="@+id/DATE" app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0" app:layout_constraintBottom_toTopOf="@+id/imageView4"/>

    <TextView android:layout_height="39dp" android:layout_width="126dp" android:textSize="19sp" android:textAlignment="textStart" android:fontFamily="@font/ruluko" android:layout_marginStart="32dp" android:id="@+id/deadline" android:layout_marginTop="200dp" app:layout_constraintStart_toStartOf="parent" android:text="date :" app:layout_constraintTop_toBottomOf="@+id/ImageURL" app:layout_constraintBottom_toTopOf="@+id/imageView4" android:layout_marginBottom="10dp"/>

    <TextView android:layout_height="48dp" android:layout_width="69dp" app:layout_constraintStart_toEndOf="@+id/ImageURL" android:textSize="19sp" android:textAlignment="textStart" android:fontFamily="@font/ruluko" android:layout_marginStart="8dp" android:id="@+id/deatails" android:layout_marginTop="28dp" android:text="details :" app:layout_constraintTop_toBottomOf="@+id/TOPIC"/>

    <ImageView android:layout_height="243dp" android:layout_width="413dp" app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageView4" app:srcCompat="@drawable/ieee" app:layout_constraintStart_toStartOf="parent" android:scaleType="centerCrop" app:layout_constraintTop_toBottomOf="@+id/ImageURL" app:layout_constraintVertical_bias="1.0" app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>